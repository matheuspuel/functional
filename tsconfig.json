{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "target": "es6",
    "lib": ["esnext"],
    "module": "commonjs",
    "incremental": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src/*"]
}

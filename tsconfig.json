{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": ["esnext"],
    "module": "commonjs",
    "outDir": "./build",
    "sourceMap": true,
    "declaration": true,
    "incremental": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src/**/*"]
}
